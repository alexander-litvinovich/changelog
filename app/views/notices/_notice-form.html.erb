<%= render 'shared/card', elevation: 2, justify: true do %>
  <h2><%= notice.new_record? ? "New notice" : "Edit notice" %></h2>

  <%= form_with model: notice, url: (notice.new_record? ? [release, notice] : notice) do |f| %>
    <fieldset>
      <legend>
        Content
      </legend>

      <div class="field">
        <%= f.label :heading %>
        <%= f.text_field :heading, placeholder: 'Optional' %>
      </div>

      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body, rows: "3"  %>
      </div>
    </fieldset>

    <fieldset>
      <legend>
        Appearing
      </legend>

      <div class="field">
        <%= f.label :target_element_selector do %>
          CSS Selector (<%= link_to 'Whatâ€™s this?', 'https://css-tricks.com/how-css-selectors-work' %>)
        <% end %>

        <%= f.text_field :target_element_selector %>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= f.submit class: 'button' %>

      <% if notice.new_record? %>
        <%= link_to "Delete", "#", "data-action": "click->inplace-editing#cancel" %>
      <% else %>
        <%= link_to 'Cancel', "#", "data-action": "click->inplace-editing#cancel" %>
      <% end %>
    </div>
  <% end %>
<% end %>